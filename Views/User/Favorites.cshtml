@model IEnumerable<DIY_Site.Models.UserFavorites>
@{
    ViewData["Title"] = "Favorites";
}

<div style="min-height: 75vh">
    <h1 class="mt-3">@ViewData["Title"]</h1>

    <hr />

    <div class="row my-4">
        <div class="d-flex justify-content-start flex-wrap align-items-center mb-5">
             @if (Model != null && Model.Any())
            {
                @foreach (var project in Model)
                {
                    <div class="d-flex gap-5 w-100 flex-row-reverse mt-4" style="max-width: 25%">
                        <a asp-action="Details" asp-controller="Projects" asp-route-id="@project?.Project.Id" class="text-dark text-decoration-none">
                            <div class="card w-100">
                                <img src="https://via.placeholder.com/150" class="card-img-top" alt="..." loading="lazy">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <h5 class="card-title" style="text-align: left !important">@project.Project.Name</h5>
                                    <a href="#" class="btn btn-primary">Read Article</a>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p>You have no favorite projects.</p>
            }
        </div>
    </div>
    <hr />
    <div class="mb-5">
        <a href="/Identity/Account/Manage" class="btn btn-primary text-light ms-3">Back to Profile</a>
    </div>
</div>

