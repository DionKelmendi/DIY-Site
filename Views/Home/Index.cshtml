    </div>

    <section class="bg-light full-width" style="height:150px;">
        <div class="container d-flex flex-row justify-content-between align-items-center h-100 gap-3 py-4">
            @foreach (var category in Model.Categories)
            {
                <div class="category cursor-pointer d-flex flex-column justify-content-evenly align-items-center h-100" style="aspect-ratio: 1 / 1;">
                    <i class="fa-solid @category.Icon"></i>
                    <p class="text-justify m-0">@category.Name</p>
                </div>
            }
        </div>
    </section>

    <section class="projects pt-3 pb-5">

        <div class="py-3 d-flex justify-content-between">
            <h3>Our projects</h3>
            <div class="d-flex gap-3">
                <button class="border rounded-circle bg-white scroll-left" style="width: 40px; aspect-ratio: 1 / 1;" type="button">
                    <span> < </span>
                </button>
                <button class="border rounded-circle bg-white scroll-right" style="width: 40px; aspect-ratio: 1 / 1;" type="button">
                    <span> > </span>
                </button>
            </div>
        </div>
        <div id="projectCarousel" class="carousel slide">
            <div class="d-flex overflow-hidden pb-3 carousel-inner">
                @foreach (var project in Model.Projects)
                {
                    <div class="d-flex gap-5 carousel-container">
                        <div class="card" style="width: 18rem;">
                            <img src="https://via.placeholder.com/150" class="card-img-top" alt="..." loading="lazy">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <h5 class="card-title w-50" style="text-align: left !important">@project.Name</h5>
                                <a href="#" class="btn btn-primary">Read Article</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="bg-contrast full-width py-4 mb-5">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="text-white">
                <h5 style="text-align: left;">Sign up for our newsletter</h5>
                <p class="m-0 text-left">Stay connected to Craftify experts</p>
            </div>

            <div class="input-group w-25">
                <input type="text" class="form-control" placeholder="Enter email here..." aria-label="Email" aria-describedby="basic-addon1">
                <div class="input-group-postpend">
                    <button type="submit" class="btn bg-primary text-white">Submit</button>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#carouselExampleIndicators').carousel({
                interval: 5000
            });

            const scrollAmount = 636;

            $('.scroll-left').on('click', function () {
                $('#projectCarousel .carousel-inner').animate({
                    scrollLeft: '-=' + scrollAmount
                }, 800);
            });

            $('.scroll-right').on('click', function () {
                $('#projectCarousel .carousel-inner').animate({
                    scrollLeft: '+=' + scrollAmount
                }, 800);
            });
        });
    </script>
}