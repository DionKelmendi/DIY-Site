<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Craftify</title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootswatch.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@400..700&family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    <!-- Animation Script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var animation = document.getElementById('animation-layout-container');
            if (!sessionStorage.getItem("animationShown")) {
                animation.style.display = 'block';
                sessionStorage.setItem("animationShown", "true");
            }
        });
    </script>
</head>
<body>
    <!-- Loading Animation -->
    <div id="animation-layout-container" style="display: none">
        <partial name="_LoadingAnimation.cshtml" />
    </div>

    <!-- Header with Navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow py-4">
            <div class="container">
                <a class="navbar-brand text-white logo-font" style="font-size: 24px" asp-area="" asp-controller="Home" asp-action="Index">Craftify</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-normal h1 mb-0" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-normal h1 mb-0" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted py-4 bg-primary-subtle">
        <div class="container">
            &copy; 2024 - Craftify - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/pixi.js@7.x/dist/pixi.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/f4fb5010ea.js" crossorigin="anonymous"></script>
    <script src="~/js/mouse-trail.js"></script> <!-- This is where your mouse trail script will be loaded -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
