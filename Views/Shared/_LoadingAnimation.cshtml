<div id="animation-div" class="position-fixed min-vw-100 min-vh-100 z-3 bg-dark" style="transition: 0.3s all ease-in">

    <h1 class="navbar-brand logo-font text-primary" style="font-size: 40px; text-align:center; margin-top: 100px;" asp-area="" asp-controller="Home" asp-action="Index">Craftify</h1>

    <div class="half" id="top">
        <div id="cut">
            <div id="scissors">
                <div id="top-part">
                    <div id="rotator-top">
                        <div class="blade"></div>
                        <div class="hole"></div>
                    </div>
                </div>
                <div id="bottom-part">
                    <div id="rotator-bottom">
                        <div class="blade"></div>
                        <div class="hole"></div>
                        <div class="screw"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="half" id="bottom"></div>
</div>

<style>
    body {
        margin: 0;
        overflow: hidden;
    }

    .hidden {
        display: none;
    }

    #scissors {
        position: absolute;
        top: calc(50% + 25px);
        left: calc(50%);
        transform: translateX(-50%) translateY(-50%);
        animation-name: move;
        animation-duration: 5s; /* changed from 10s */
        animation-timing-function: ease;
        animation-fill-mode: forwards;
    }

        #scissors:after,
        #scissors:before {
            content: '';
            display: block;
            position: absolute;
        }

        #scissors:after {
            width: 15px;
            height: 65px;
            background: #eb6864;
            top: 68px;
            left: -8px;
            opacity: 0;
            animation-name: opac;
            animation-delay: 4.75s; /* changed from 9.5s */
            animation-duration: 0.25s; /* changed from 0.5s */
            animation-timing-function: ease;
            animation-fill-mode: forwards;
        }

        #scissors:before {
            width: 30px;
            height: 12px;
            background: #eb6864;
            top: 95px;
            opacity: 0;
            animation-name: opac;
            animation-delay: 4.75s; /* changed from 9.5s */
            animation-duration: 0.25s; /* changed from 0.5s */
            animation-timing-function: ease;
            animation-fill-mode: forwards;
        }

    @@keyframes move {
        0% {
            left: calc(50% - 300px);
        }

        10% {
            left: calc(50% - 266px);
        }

        30% {
            left: calc(50% - 66px);
        }

        50% {
            left: calc(50% + 66px);
        }

        70% {
            left: calc(50% + 266px);
        }

        100% {
            left: calc(50% + 1290px);
            z-index: 1
        }
    }

    .hole {
        position: absolute;
        background: radial-gradient(circle at center, rgba(0, 0, 0, 0) 45%, #eb6864 47%, #eb6864 100%);
        width: 90px;
        height: 90px;
        border-radius: 100px;
    }

    .blade {
        position: absolute;
        background: #bdc3c7;
        width: 230px;
        height: 30px;
        left: 80px;
        top: 30px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #top-part {
        position: absolute;
        transform-origin: 45px 45px;
        transform: rotateZ(30deg);
        z-index: 2;
    }

        #top-part .blade {
            border-bottom-right-radius: 100px;
        }

    #bottom-part {
        position: absolute;
        top: 112px;
        transform-origin: 45px 45px;
        transform: rotateZ(-30deg);
        z-index: 2;
    }

        #bottom-part .blade {
            border-top-right-radius: 100px;
        }

    #rotator-top {
        transform-origin: 155px 45px;
        animation: rotateTop 1s linear 5 forwards; /* changed from 2s */
    }

    #rotator-bottom {
        transform-origin: 155px 45px;
        animation: rotateBottom 1s linear 5 forwards; /* changed from 2s */
    }

    @@keyframes rotateTop {
        0% {
            transform: rotateZ(-10deg);
        }

        50% {
            transform: rotateZ(20deg);
        }

        100% {
            transform: rotateZ(-10deg);
        }
    }

    @@keyframes rotateBottom {
        0% {
            transform: rotateZ(10deg);
        }

        50% {
            transform: rotateZ(-20deg);
        }

        100% {
            transform: rotateZ(10deg);
        }
    }

    .screw {
        position: absolute;
        width: 15px;
        height: 15px;
        background: white;
        border-radius: 100px;
        top: 37px;
        left: 150px;
        box-shadow: 0 0 5px rgba(189, 195, 199, 0.5);
    }

        .screw:after {
            content: '';
            display: block;
            position: absolute;
            width: 10px;
            height: 3px;
            background: #ccc;
            /* darkened white */
            top: 6px;
            left: 2px;
            box-shadow: inset 0 1px 1px black;
        }

    .half {
        position: absolute;
        left: 50%;
        top: 50%;
    }

        .half#top {
            border-bottom: 125px solid #ecf0f1;
            /* half of $paper-height */
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            height: 0;
            width: 340px;
            animation-name: paper-top;
            animation-fill-mode: forwards;
            animation-timing-function: ease;
            animation-duration: 2.5s; /* changed from 5s */
            animation-delay: 4.5s; /* changed from 9s */
            transform: translateX(-50%) translateY(calc(-50% - 62px));
        }

        .half#bottom {
            border-bottom: 125px solid #ecf0f1;
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            height: 0;
            width: 400px;
            z-index: 3;
            animation-name: paper-bottom;
            animation-fill-mode: forwards;
            animation-timing-function: ease;
            animation-duration: 2.5s; /* changed from 5s */
            animation-delay: 4.5s; /* changed from 9s */
            transform: translateX(-50%) translateY(calc(-50% + 62px));
        }

    @@keyframes paper-top {
        99% {
            opacity: 1;
        }

        100% {
            transform: rotateZ(-180deg) translateY(2000px);
            opacity: 0;
        }
    }

    @@keyframes paper-bottom {
        99% {
            opacity: 1;
        }

        100% {
            transform: rotateZ(360deg) translateY(2000px);
            opacity: 0;
        }
    }

    #cut {
        position: absolute;
        height: 2px;
        top: 50%;
        left: 50%;
        transform: translateX(calc(-50% - 200px)) translateY(calc(-50% - 2px));
        animation-name: cut;
        animation-duration: 5s; /* changed from 10s */
        animation-fill-mode: forwards;
        animation-timing-function: ease;
    }

    @@keyframes cut {
        10% {
            width: 0;
        }

        30% {
            width: 190px;
        }

        50% {
            width: 390px;
        }

        70% {
            width: 590px;
        }

        90% {
            width: 800px;
        }

        90.1% {
            width: 0px;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var top = document.querySelector("#top");
        var animationDiv = document.querySelector("#animation-div");
            top.addEventListener("animationend", function () {
            animationDiv.style.opacity = 0;
            setTimeout(function () {
                animationDiv.classList.add("hidden");
            }, 300);
            });
    });
</script>
