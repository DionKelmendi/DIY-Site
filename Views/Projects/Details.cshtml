@model DIY_Site.Models.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="bg-light full-width py-5">
<section class="container-1200px">
        <div class="flex"><a class="text-dark text-decoration-none bg-secondary-subtle p-2 hoverable" asp-action="Index" asp-controller="Home">Home</a> > <a class="text-dark text-decoration-none bg-secondary-subtle p-2 hoverable" href="#"> @Model.Project.Category.Name </a> > @Model.Project.Name</div>
    <hr />

    <div>
            <h2 class="px-3">@Model?.Project.Name</h2>
            <hr />
        <div class="flex">
                <video width="800" height="480" controls>
                    <source src="movie.mp4" type="video/mp4">
                </video>
            </div>
            <div class="bg-secondary-subtle p-3">
                <p>@Model?.Project.Description</p>

                <h4>Supplies Needed</h4>
                <ul>
                    @foreach (var supply in Model?.Supplies)
                    {
                        <li>@supply?.Name</li>
                    }
                </ul>

                @{
                    var nextId = Model?.Project.Id + 1;
                    var prevId = Model?.Project.Id - 1;

                    if (nextId == 3)
                    {
                        nextId = 4;
                    }
                    if (nextId == 26)
                    {
                        nextId = 1;
                    }
                    if (prevId == 3)
                    {
                        prevId = 2;
                    }
                    if (prevId == 0)
                    {
                        prevId = 25;
                    }
                }

                <a asp-action="Details" asp-route-id="@prevId">Go Back</a> |
                <a asp-action="Details" asp-route-id="@nextId">View Next</a>
            </div>
    </div>
</section>
</div>
